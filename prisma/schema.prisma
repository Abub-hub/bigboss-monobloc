datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Company {
  id        Int        @id @default(autoincrement())
  name      String
  siret     String     @unique
  password  String
  director  String?
  employees Employee[]
  computers Computer[]
}

model Employee {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String
  password  String
  age       Int?
  gender    String?
  company   Company  @relation(fields: [companyId], references: [id])
  companyId Int
  computer  Computer?
}

model Computer {
  id        Int      @id @default(autoincrement())
  mac       String
  company   Company  @relation(fields: [companyId], references: [id])
  companyId Int
  employee  Employee? @relation(fields: [employeeId], references: [id])
  employeeId Int? @unique
}
